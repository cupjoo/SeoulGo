<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8e8e8"
    android:scrollbars="vertical">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#00B8D4" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:id="@+id/reviewBack"
                android:background="@drawable/ic_keyboard_backspace_white_48dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="20dp"
                android:gravity="center_vertical|center|center_horizontal"
                android:text="사건 목록"
                android:textColor="#ffffff"
                android:textStyle="bold" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#e8e8e8">


            <LinearLayout
                android:clickable="true"
                android:id="@+id/event0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/selector_event"
                android:layout_gravity="center_horizontal">
                <ImageView
                    android:layout_margin="10dp"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/intro_0"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="강화도조약"
                    android:textSize="30dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="#00b8d4"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/event1"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/selector_event"
                android:layout_gravity="center_horizontal">
                <ImageView
                    android:layout_margin="10dp"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/intro_1"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="갑신정변"
                    android:textSize="30dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="#00b8d4"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:clickable="true"
                android:id="@+id/event2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/selector_event"
                android:layout_gravity="center_horizontal" >

                <ImageView
                    android:layout_margin="10dp"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/intro_2"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아관파천"
                    android:textSize="30dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="#00b8d4"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:clickable="true"
                android:id="@+id/event3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/selector_event"
                android:layout_gravity="center_horizontal"
                >
                <ImageView
                    android:layout_margin="10dp"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/intro_3"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="대한제국의 설립"
                    android:textSize="30dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="#00b8d4"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:clickable="true"
                android:id="@+id/event4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/selector_event"
                android:layout_gravity="center_horizontal"
                >
                <ImageView
                    android:layout_margin="10dp"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/intro_4"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="대한제국의 국권피탈"
                    android:textSize="30dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="#00b8d4"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:clickable="true"
                android:id="@+id/event5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/selector_event"
                android:layout_gravity="center_horizontal"
                >
                <ImageView
                    android:layout_margin="10dp"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/intro_5"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.1운동"
                    android:textSize="30dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="#00b8d4"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:clickable="true"
                android:id="@+id/event6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/selector_event"
                android:layout_gravity="center_horizontal"
                >
                <ImageView
                    android:layout_margin="10dp"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/intro_6"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="대한민국임시정부수립"
                    android:textSize="30dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="#00b8d4"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:clickable="true"
                android:id="@+id/event7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/selector_event"
                android:layout_gravity="center_horizontal"
                >
                <ImageView
                    android:layout_margin="10dp"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/intro_7"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.19혁명"
                    android:textSize="30dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="#00b8d4"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00B8D4"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
</LinearLayout>